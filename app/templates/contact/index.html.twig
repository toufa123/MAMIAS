{% extends 'base.html.twig' %}
{% block title %}Contact Us{% endblock %}

{% block stylesheets %}


{% endblock %}

{% block body %}

    <div class="row">

        {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
                {% for msg in app.session.flashBag.get('success') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="row m-b-10">
        <div class="col-md-12">
            <div class="row">
                <div class="property-card">
                    <div class="property-image"
                         style="background: url('{{ asset('resources/images/contact.png') }}') center center / cover no-repeat;">

                    </div>
                </div>

            </div>
        </div>

        <div class="row ">
            <div class="col-md-12">
                <div class="row">
                    <!-- Contact form -->
                    <div class="col-sm-6">
                        <div class="property-card">
                            <div class="panel-heading">
                                <h3 class="panel-title">Send us a Message</h3>
                                <p class="text-muted sub-title">Your comments and ideas are greatly appreciated.</p>
                            </div>
                            <div class="property-content">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_widget(form.FirstName,{'attr': {'placeholder': 'First Name'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_widget(form.LastName, {'attr': {'placeholder': 'Last Name'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_widget(form.subject, {'attr': {'placeholder': 'Subject'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_widget(form.message, {'attr': {'placeholder': 'Message'}}) }}
                                </div>

                                <div class="form-group">
                                    {% form_theme form '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}
                                    {{ form_errors(form.recaptcha) }}
                                    {{ form_widget(form.recaptcha) }}
                                </div>


                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div> <!-- end col -->

                    <div class="col-sm-4 col-sm-offset-1">
                        <div class="contact-box">

                            <div class="contact-detail">
                                <i class="ion-android-location"></i>
                                <address>
                                    Boulevard du Leader Yasser Arafat B.P. 337 - 1080 Tunis Cedex - La Charguia <br>
                                    Tunis, Tunisia
                                </address>
                            </div>

                            <div class="contact-detail">
                                <i class="ion-android-call"></i>
                                <p>
                                    (+216) 71 206 649/485/851/765
                                </p>
                            </div>

                            <div class="contact-detail">
                                <i class="ion-android-mail"></i>
                                <p>
                                    <a href="">info@mamias.org</a>
                                </p>
                            </div>

                        </div>
                    </div> <!-- end col -->
                </div>
            </div>
        </div>
    </div>


    {% block javascripts %}

    {% endblock %}

{% endblock %}
